{
	"name": "cypress-example-kitchensink",
	"version": "1.0.0",
	"description": "Cypress automate UI tests for LPG sites",
	"author": "Leisure Pass Group",
	"scripts": {
		"e2e": "XDG_CONFIG_HOME=/tmp/cyhome1 cypress run",
		"open:e2e": "cypress open",
		"test:ci":"jest --ci --runInBand --reporters=default --reporters=jest-junit",
		"e2e:env": "cp cypress.env cypress.env.json",
		"cypress:run:chrome": "cypress run --browser chrome",
		"cypress:run:firefox": "cypress run --browser firefox",
		"cypress:run:edge": "cypress run --browser edge",
		"clean:reports": "rmdir /S /Q cypress\\reports && mkdir cypress\\reports && mkdir cypress\\reports\\mochareports",
		"pretest": "npm run clean:reports",
		"scripts": "cypress run",
		"combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
		"generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
		"posttest": "npm run combine-reports && npm run generate-report",
		"test": "npm run scripts || npm run posttest"
	},
	"devDependencies": {
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@cypress/browserify-preprocessor": "^2.1.4",
		"archiver": "^3.1.1",
		"babel-core": "^6.26.3",
		"babel-eslint": "^10.1.0",
		"babel-plugin-styled-components": "^1.11.1",
		"cypress": "^6.0.0",
		"cypress-iframe": "^1.0.1",
		"cypress-multi-reporters": "^1.4.0",
		"cypress-visual-regression": "^1.2.0",
		"eslint": "^7.12.1",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.14.0",
		"eslint-plugin-cypress": "^2.11.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.3.0",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-react-hooks": "^4.0.0",
		"mkdirp": "^1.0.3",
		"mocha": "^7.1.2",
		"mochawesome": "^6.1.1",
		"mochawesome-merge": "^4.0.3",
		"mochawesome-report-generator": "^5.1.0"
	}
}
